using System;
 
class FormattingNumbers
{
    static void Main()
    {
        Console.WriteLine("Enter number a:");
        int a = int.Parse(Console.ReadLine());
        if (a<0||a>500)
        {
            Console.WriteLine("Number is out of range!");
            return;
        }
        Console.WriteLine("Enter b and c:");
        string b=Console.ReadLine();
        string c =Console.ReadLine();
        Console.Write("|{0,-10:X}|",a);
        Console.Write("{0,10}|",Convert.ToString((long)a,2).PadLeft(10,'0'));
        double numB = double.Parse(b);
        int indexB = b.IndexOf(".");
        if (indexB == -1)
        {
            Console.Write("{0,10}|", numB);
        }
        else
        {
            Console.Write("{0,10:F2}|", numB);
        }
        double numC = double.Parse(c);
        int indexC = c.IndexOf(".");
        if (indexC==-1)
        {
            Console.Write("{0,-10}|",numC); 
        }
        else
        {
            Console.Write("{0,-10:F3}|",numC);
        }
        Console.WriteLine();
    }
}

