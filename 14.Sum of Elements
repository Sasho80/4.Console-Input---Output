using System;

class SumOfElements
{
    static void Main()
    {
        string[] num = Console.ReadLine().Split();
        long sum = 0;
        long difference = 0;
        long x = 0;
        long maxNum = Convert.ToInt64(num[1]);
        long max = 0;
        for (int i = 0; i < num.Length; i++)
        {
            x = Convert.ToInt64(num[i]);
            sum = sum + x;
            if (max < x)
            {
                max = Math.Max(Convert.ToInt64(num[i]), maxNum);
            }
            difference = Math.Abs(sum - max - max);
        }
        sum = sum - max;
        if (sum == max)
        {
            Console.WriteLine("Yes, sum={0}", sum);
        }
        else
        {
            Console.WriteLine("No, diff={0}", difference);
        }
    }
}

